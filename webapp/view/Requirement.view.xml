<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.extraWorkManagement1.controller.Requirement" xmlns="sap.m"
	xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout">
	<Page showHeader="true" title="Client Extra Work Requirement Entry" showFooter="true" showNavButton="false"
		navButtonPress="_onPageNavButtonPress">
		<content>
			<form:SimpleForm title="" editable="true" labelSpanL="4" emptySpanL="0" emptySpanM="0" adjustLabelSpan="true" labelSpanM="4" columnsL="2"
				columnsM="2" layout="ResponsiveGridLayout">
				<form:content>
				<Label text="Project" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true">
					<layoutData>
						<layout:GridData span="L2 M2"/>
					</layoutData>
				</Label>
				<ComboBox editable="true" enabled="true" visible="true" width="auto" valueState="None">
					<items>
						<core:Item text="Item" enabled="true" key="Item"/>
						<core:Item text="Item" enabled="true" key="Item"/>
						<core:Item text="Item" enabled="true" key="Item"/>
					</items>
					<layoutData>
						<layout:GridData span="L4 M4"/>
					</layoutData>
				</ComboBox>
				<Label text="Client" design="Standard" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true">
					<layoutData>
						<layout:GridData span="L2 M2"/>
					</layoutData>
				</Label>
				<ComboBox editable="true" enabled="true" visible="true" width="auto" valueState="None">
					<items>
						<core:Item text="Item" enabled="true" key="Item"/>
						<core:Item text="Item" enabled="true" key="Item"/>
						<core:Item text="Item" enabled="true" key="Item"/>
					</items>
					<layoutData>
						<layout:GridData span="L4 M4"/>
					</layoutData>
				</ComboBox>
				<Label text="Ref No." design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true">
					<layoutData>
						<layout:GridData span="L2 M2"/>
					</layoutData>
				</Label>
				<Input type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false" required="false"
					valueStateText="Invalid entry" maxLength="0">
					<layoutData>
						<layout:GridData span="L4 M4"/>
					</layoutData>
				</Input>
				<Label text="Requirement Date" width="100%" required="true" textAlign="Begin" visible="true">
					<layoutData>
						<layout:GridData span="L2 M2"/>
					</layoutData>
				</Label>
				<DatePicker width="auto" displayFormat="dd-MM-yyyy" required="false" valueStateText="Invalid entry" enabled="true" visible="true"
					valueFormat="dd-MM-yyyy">
					<layoutData>
						<layout:GridData span="L4 M4"/>
					</layoutData>
				</DatePicker>
				</form:content>
			</form:SimpleForm>
			<ScrollContainer height="50%" width="100%" horizontal="true" vertical="true" focusable="true">
				<Table width="auto" noDataText="No data" mode="None" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true"
					class="sapUiResponsiveMargin">
					<headerToolbar>
						<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
							<content>
								<Title text="Items (3)" titleStyle="Auto" width="auto" textAlign="Begin" visible="true" wrapping="false"/>
								<ToolbarSpacer width=""/>
								<Button text="Add Extrawork Items" type="Accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
									press="_onButtonPress"/>
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Phone" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
							<header>
								<Text text="Category" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
							<header>
								<Text text="Extra Work Item" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
							<header>
								<Text text="Unit" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
							<header>
								<Text text="Quantity" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
							<header>
								<Text text="Remarks" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Active">
							<cells>
								<Text/>
								<Text/>
								<Text/>
								<Input type="Number" showValueHelp="false" enabled="true" visible="true" width="50%" valueHelpOnly="false" required="false"
									valueStateText="Invalid entry" maxLength="0"/>
								<TextArea rows="2" cols="20" maxLength="0" wrapping="None" enabled="true" required="false" valueStateText="Invalid entry" visible="true"/>
							</cells>
						</ColumnListItem>
						<ColumnListItem type="Active">
							<cells>
								<Text/>
								<Text/>
								<Text/>
								<Input type="Number" showValueHelp="false" enabled="true" visible="true" width="50%" valueHelpOnly="false" required="false"
									valueStateText="Invalid entry" maxLength="0"/>
								<TextArea rows="2" cols="20" maxLength="0" wrapping="None" enabled="true" required="false" valueStateText="Invalid entry" visible="true"/>
							</cells>
						</ColumnListItem>
						<ColumnListItem type="Active">
							<cells>
								<Text/>
								<Text/>
								<Text/>
								<Input type="Number" showValueHelp="false" enabled="true" visible="true" width="50%" valueHelpOnly="false" required="false"
									valueStateText="Invalid entry" maxLength="0"/>
								<TextArea rows="2" cols="20" maxLength="0" wrapping="None" enabled="true" required="false" valueStateText="Invalid entry" visible="true"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content>
					<ToolbarSpacer width=""/>
					<Button text="Save" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
					<Button text="Cancel" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
				</content>
			</OverflowToolbar>
		</footer>
		<headerContent/>
		<subHeader/>
		<customHeader/>
	</Page>
</mvc:View>