<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.extraWorkManagement1.controller.Category" xmlns="sap.m"
	xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Page title="Client Extra Work Category" showHeader="true" showFooter="true" showNavButton="false" navButtonPress="_onPageNavButtonPress">
		<content>
			<form:SimpleForm title="" editable="true" maxContainerCols="1" columnsL="1" columnsXL="1" layout="ResponsiveGridLayout">
				<form:content>
				<Label text="Category" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true">
					<layoutData>
						<layout:GridData span="L2 M2"/>
					</layoutData>
				</Label>
				<ComboBox editable="true" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%">
					<items>
						<core:Item text="Item" enabled="true" key="Item"/>
						<core:Item text="Item" enabled="true" key="Item"/>
						<core:Item text="Item" enabled="true" key="Item"/>
					</items>
					<layoutData>
						<layout:GridData span="L4 M4"/>
					</layoutData>
				</ComboBox>
				<Label text="Remarks" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true">
					<layoutData>
						<layout:GridData span="L2 M2"/>
					</layoutData>
				</Label>
				<TextArea width="auto" cols="5" maxLength="0" wrapping="true" enabled="true" required="false" valueStateText="Invalid entry"
					visible="true">
					<layoutData>
						<layout:GridData span="L4 M4"/>
					</layoutData>
				</TextArea>
				<!--<Label text="" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true">-->
				<!--	<layoutData>-->
				<!--		<layout:GridData span="L2 M2"/>-->
				<!--	</layoutData>-->
				<!--</Label>-->
				<!--<CheckBox text="Checkbox Text" selected="true" editable="true" enabled="true" visible="true" width="auto" textDirection="Inherit"-->
				<!--	wrapping="false" useEntireWidth="true">-->
				<!--	<layoutData>-->
				<!--		<layout:GridData span="L4 M4"/>-->
				<!--	</layoutData>-->
				<!--</CheckBox>-->
				</form:content>
			</form:SimpleForm>
			<ScrollContainer height="50%" width="100%" horizontal="true" vertical="true" focusable="true">
				<Table width="auto" noDataText="No data" mode="None" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true"
					class="sapUiResponsiveMargin">
					<headerToolbar>
						<OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
							<content>
								<Title text="Extra Work Category" titleStyle="Auto" width="auto" textAlign="Begin" visible="true" wrapping="false"/>
								<ToolbarSpacer width=""/>
								<OverflowToolbarButton text="Sort" type="Transparent" icon="sap-icon://sort" iconFirst="true" width="auto" enabled="true" visible="true"
									iconDensityAware="false"/>
								<OverflowToolbarButton text="Filter" type="Transparent" icon="sap-icon://filter" iconFirst="true" width="auto" enabled="true" visible="true"
									iconDensityAware="false"/>
								<OverflowToolbarButton text="Group" type="Transparent" icon="sap-icon://group-2" iconFirst="true" width="auto" enabled="true" visible="true"
									iconDensityAware="false"/>
								<OverflowToolbarButton text="Settings" type="Transparent" icon="sap-icon://action-settings" iconFirst="true" width="auto" enabled="true"
									visible="true" iconDensityAware="false"/>
							</content>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column width="10%" hAlign="Left" vAlign="Middle" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
							<header>
								<Text text="Sl No." width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
							<header>
								<Text text="Category" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
							<header>
								<Text text="Remarks" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
						<Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
							<header>
								<Text text="Active" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
							</header>
							<footer/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Active">
							<cells>
								<Text text="1"/>
								<Text text="Electrical Fitting"/>
								<Text/>
								<CheckBox text="" selected="true" editable="true" enabled="true" visible="true" width="auto" textDirection="Inherit" wrapping="false"
									useEntireWidth="true"/>
							</cells>
						</ColumnListItem>
						<ColumnListItem type="Active">
							<cells>
								<Text text="2"/>
								<Text text="Floor Work"/>
								<Text/>
								<CheckBox text="" selected="true" editable="true" enabled="true" visible="true" width="auto" textDirection="Inherit" wrapping="false"
									useEntireWidth="true"/>
							</cells>
						</ColumnListItem>
						<ColumnListItem type="Active">
							<cells>
								<Text text="3"/>
								<Text text="Wood Work"/>
								<Text text="extra 6% charges applicable"/>
								<CheckBox text="" selected="true" editable="true" enabled="true" visible="true" width="auto" textDirection="Inherit" wrapping="false"
									useEntireWidth="true"/>
							</cells>
						</ColumnListItem>
						<ColumnListItem type="Active">
							<cells>
								<Text text="4"/>
								<Text text="Plumbing Work"/>
								<Text/>
								<CheckBox text="" selected="true" editable="true" enabled="true" visible="true" width="auto" textDirection="Inherit" wrapping="false"
									useEntireWidth="true"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content>
					<ToolbarSpacer width=""/>
					<Button text="Save" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
					<Button text="Cancel" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
				</content>
			</OverflowToolbar>
		</footer>
		<headerContent/>
	</Page>
</mvc:View>